<div class='container'>
  <div class='row'>
    <div class='col-md-3'>
      <h2>User info</h2>
      <%= render 'users/info', user: @books.user %>
      <h2 class="mt-3">New book</h2>
      <%= render 'form', book: @book %>
    </div>
    <div class='col-md-8 offset-md-1'>
  		<h2>Book detail</h2>
  		<table class='table'>
  		  <tr>
          <td><%= link_to(@books.user) do %>
            <%= image_tag @books.user.get_profile_image, size:"100x100" %><br>
            <%= @books.user.name %>
            <% end %>
          </td>
          <td><%= link_to @books.title, @books %></td>
          <td><%= @books.body %></td>
          <td>
            <% if @books.favorited_by?(current_user) %>
            <p>
              <%= link_to book_favorites_path(@books), method: :delete do %>
                ♥<%= @books.favorites.count %>
              <% end %>
            </p>
            <% else %>
            <p>
              <%= link_to book_favorites_path(@books), method: :post do %>
               ♡<%= @books.favorites.count %>
              <% end %>
            </p>
            <% end %>
          </td>
          <td>
            <p>コメント数:<%= @books.book_comments.count %></p>
          </td>

          <% if @books.user == current_user %>
            <td><%= link_to 'Edit', edit_book_path(@books), class: "btn btn-sm btn-success" %></td>
            <td><%= link_to 'Destroy', @books, method: :delete, data: { confirm: '本当に消しますか？' }, class: "btn btn-sm btn-danger"%></td>
            <% end %>
        </tr>
      </table>

      <table class = "table">
        <% @books.book_comments.each do |book_comment| %>
        <tr>
          <td>
            <p><%= image_tag book_comment.user.get_profile_image, size:'50x50' %></p>
            <%= link_to(@books.user) do %>
              <%= book_comment.user.name %>
            <% end %>
          </td>
          <td>
            <%= book_comment.comment %>
          </td>
          <td>
            <% if book_comment.user == current_user %>
              <%= link_to "Destroy", book_book_comment_path(book_comment.book, book_comment), method: :delete %>
            <% end %>
          </td>
        </tr>
        <% end %>
      </table>

      <div>
        <%= form_with model: [@books,@book_comment] do |f| %>
          <%= f.text_area :comment, rows:'5' %><br>
          <%= f.submit "送信" %>
        <% end %>
      </div>
    </div>
  </div>
</div>