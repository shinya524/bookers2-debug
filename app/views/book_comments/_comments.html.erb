<% books.book_comments.each do |book_comment| %>
  <tr>
    <td>
      <p><%= image_tag book_comment.user.get_profile_image, size:'50x50' %></p>
        <%= link_to(books.user) do %>
          <%= book_comment.user.name %>
        <% end %>
      </td>
      <td>
        <%= book_comment.comment %>
      </td>
      <td>
        <% if book_comment.user == current_user %>
          <%= link_to "Destroy", book_book_comment_path(book_comment.book, book_comment), method: :delete, remote: true %>
        <% end %>
      </td>
    </tr>
<% end %>